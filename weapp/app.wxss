/* 全局样式 */
page {
  background-color: #f8f8f8;
  font-family: -apple-system-font, Helvetica Neue, Helvetica, sans-serif;
  font-size: 14px;
  color: #333;
}

/* 容器样式 */
.container {
  padding: 20rpx;
}

/* 按钮样式 */
.button {
  background-color: #f44;
  color: #fff;
  border-radius: 50rpx;
  padding: 20rpx 40rpx;
  text-align: center;
  margin: 20rpx 0;
}

.button[disabled] {
  opacity: 0.6;
}

/* 商品卡片样式 */
.product-card {
  background: #fff;
  border-radius: 10rpx;
  margin-bottom: 20rpx;
  padding: 20rpx;
  box-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.1);
}

/* 价格样式 */
.price {
  color: #f44;
  font-size: 32rpx;
  font-weight: bold;
}

/* 原价样式 */
.original-price {
  color: #999;
  text-decoration: line-through;
  font-size: 24rpx;
  margin-left: 10rpx;
}

/* 加载更多样式 */
.load-more {
  text-align: center;
  color: #999;
  padding: 20rpx;
}

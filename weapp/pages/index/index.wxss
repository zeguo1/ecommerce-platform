/* pages/index/index.wxss */
.product-card {
  display: flex;
  margin-bottom: 20rpx;
  background: #fff;
  border-radius: 10rpx;
  overflow: hidden;
}

.product-image {
  width: 200rpx;
  height: 200rpx;
  margin-right: 20rpx;
}

.product-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  padding: 20rpx 0;
}

.product-name {
  font-size: 28rpx;
  color: #333;
  line-height: 1.4;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

.price-section {
  margin-top: 10rpx;
}

.actions {
  margin-top: 20rpx;
}

.load-more {
  padding: 20rpx 0;
  text-align: center;
  color: #999;
  font-size: 24rpx;
}

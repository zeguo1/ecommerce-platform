/* 容器样式 */
.container {
  padding: 20rpx;
}

/* 搜索栏样式 */
.search-bar {
  background-color: #fff;
  border-radius: 40rpx;
  padding: 20rpx 30rpx;
  margin-bottom: 30rpx;
}

.search-bar input {
  flex: 1;
  margin-right: 20rpx;
}

.search-icon {
  width: 40rpx;
  height: 40rpx;
}

.placeholder {
  color: #999;
}

/* 轮播图样式 */
swiper {
  height: 350rpx;
  border-radius: 20rpx;
  overflow: hidden;
  margin-bottom: 30rpx;
}

swiper image {
  width: 100%;
  height: 100%;
}

/* 分类导航样式 */
.category-nav {
  margin-bottom: 30rpx;
}

.category-nav navigator {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.category-nav image {
  width: 80rpx;
  height: 80rpx;
  margin-bottom: 10rpx;
}

.category-nav text {
  font-size: 24rpx;
  color: #666;
}

/* 推荐商品样式 */
.recommend-products .title {
  margin-bottom: 20rpx;
}

.recommend-products .title text {
  font-size: 32rpx;
  font-weight: bold;
}

.recommend-products .title navigator {
  font-size: 24rpx;
  color: #666;
}

.product-list {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}

.product-item {
  width: 48%;
  background-color: #fff;
  border-radius: 20rpx;
  overflow: hidden;
  margin-bottom: 20rpx;
}

.product-item image {
  width: 100%;
  height: 300rpx;
}

.product-info {
  padding: 20rpx;
}

.product-name {
  font-size: 28rpx;
  color: #333;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  text-overflow: ellipsis;
  margin-bottom: 10rpx;
}

.price {
  color: #ff2d4a;
  font-size: 32rpx;
  font-weight: bold;
}

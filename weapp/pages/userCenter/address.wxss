.container {
  padding: 20rpx;
}

.address-list {
  margin-bottom: 100rpx;
}

.address-item {
  background: #fff;
  border-radius: 10rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 6rpx rgba(0,0,0,0.1);
}

.address-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #eee;
}

.address-body {
  padding: 20rpx 0;
  color: #666;
}

.address-actions {
  display: flex;
  justify-content: flex-end;
  gap: 10rpx;
}

.add-btn {
  position: fixed;
  bottom: 20rpx;
  left: 20rpx;
  right: 20rpx;
}

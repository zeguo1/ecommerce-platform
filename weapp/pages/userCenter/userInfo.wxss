.container {
  padding: 20rpx;
}

.profile-overview {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 30rpx;
  background: #fff;
  border-radius: 16rpx;
  margin-bottom: 20rpx;
}

.avatar-section {
  text-align: center;
  margin-bottom: 30rpx;
}

.profile-avatar {
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
  border: 4rpx solid #f0f0f0;
}

.upload-btn {
  margin-top: 20rpx;
  font-size: 28rpx;
  color: #007bff;
}

.profile-details {
  width: 100%;
}

.profile-details .info-item {
  margin: 20rpx 0;
  padding: 20rpx;
  background-color: #f8f9fa;
  border-radius: 8rpx;
  font-size: 28rpx;
  color: #333;
}

.profile-details .text-success {
  color: #28a745;
  font-weight: bold;
}

.wechat-status {
  display: flex;
  align-items: center;
  margin-top: 20rpx;
}

.wechat-status .icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 10rpx;
}

.form-group {
  margin-bottom: 30rpx;
}

.form-group label {
  display: block;
  margin-bottom: 10rpx;
  font-size: 28rpx;
  color: #333;
  font-weight: bold;
}

.form-group input {
  width: 100%;
  padding: 20rpx;
  border: 1rpx solid #ddd;
  border-radius: 8rpx;
  font-size: 28rpx;
}

.form-group input:focus {
  border-color: #007bff;
  box-shadow: 0 0 0 2rpx rgba(0,123,255,0.25);
}

.save-btn {
  width: 100%;
  padding: 30rpx;
  background-color: #007bff;
  color: #fff;
  border-radius: 8rpx;
  text-align: center;
  font-size: 32rpx;
  margin-top: 40rpx;
}

.save-btn:active {
  background-color: #0056b3;
}

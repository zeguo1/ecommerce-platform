/* pages/cart/cart.wxss */
.container {
  padding: 20rpx;
  min-height: 100vh;
  background: #f5f5f5;
}

.cart-item {
  display: flex;
  align-items: center;
  background: #fff;
  border-radius: 10rpx;
  margin-bottom: 20rpx;
  padding: 20rpx;
}

.item-image {
  width: 150rpx;
  height: 150rpx;
  border-radius: 10rpx;
  margin-right: 20rpx;
}

.item-info {
  flex: 1;
}

.item-name {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 10rpx;
}

.price {
  color: #e4393c;
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
}

.quantity-control {
  display: flex;
  align-items: center;
}

.quantity-btn {
  width: 50rpx;
  height: 50rpx;
  line-height: 50rpx;
  text-align: center;
  padding: 0;
  margin: 0 10rpx;
  border-radius: 50%;
  background: #f5f5f5;
}

.quantity {
  font-size: 28rpx;
  color: #333;
}

.delete-btn {
  width: 100rpx;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  padding: 0;
  margin-left: 20rpx;
  background: #f5f5f5;
  border-radius: 30rpx;
  font-size: 24rpx;
  color: #666;
}

.empty-cart {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 60vh;
}

.empty-cart image {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 20rpx;
}

.empty-cart text {
  font-size: 28rpx;
  color: #999;
}

.checkout-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 100rpx;
  background: #fff;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 20rpx;
  box-shadow: 0 -2rpx 10rpx rgba(0,0,0,0.1);
}

.total-price {
  font-size: 32rpx;
  color: #e4393c;
  font-weight: bold;
}

.checkout-btn {
  width: 200rpx;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  padding: 0;
  background: #e4393c;
  color: #fff;
  border-radius: 40rpx;
}
